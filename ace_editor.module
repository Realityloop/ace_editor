function ace_editor_library() {

	$libraries['ace-editor'] = array(
		'title' => 'Ace Editor',
		'version' => '1.0',
		'js' => array(
			'sites/all/libraries/ace/src/ace.js' => array(),
			'sites/all/libraries/ace/src/mode-html.js' => array(),
			'sites/all/libraries/ace/src/theme-twilight.js' => array(),
		),
	);

	return $libraries;
}